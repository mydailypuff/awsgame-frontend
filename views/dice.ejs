<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roll Dice</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <button id="roll-dice-btn">Roll Dice</button>
        <div id="result"></div>
    </div>

    <script>
        const rollDiceBtn = document.getElementById('roll-dice-btn');
        const resultDiv = document.getElementById('result');

        rollDiceBtn.addEventListener('click', () => {
            // Clear the result area
            resultDiv.innerHTML = '<img src="../images/dice-game.gif" alt="Rolling Dice">';

            // Wait for 3 seconds and then display a random number
            setTimeout(() => {
                const randomNumber = Math.floor(Math.random() * 6) + 1;
                resultDiv.innerHTML = `<p>You rolled: <span>${randomNumber}</span></p>`;
            
                setTimeout(() => {
                window.parent.postMessage('close-modal', '*'); // Send the message
              }, 500); 
            }, 2000);
        });
    </script>
</body>
</html>
