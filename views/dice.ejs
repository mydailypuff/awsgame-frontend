<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roll Dice</title>
    <link rel="stylesheet" href="../styles/dice.css">
</head>
<body>
    <div class="container">
        <button id="roll-dice-btn">Roll Dice</button>
        <div id="result"></div>
    </div>

    <script>
        const rollDiceBtn = document.getElementById('roll-dice-btn');
        const resultDiv = document.getElementById('result');

        rollDiceBtn.addEventListener('click', () => {
            // Hide the button after clicking
            rollDiceBtn.style.display = 'none';

            // Clear the result area and show the rolling dice GIF
            resultDiv.innerHTML = '<img src="../images/dice-game.gif" alt="Rolling Dice">';

            // Wait for 3 seconds and then display a random number
            setTimeout(() => {
                const randomNumber = Math.floor(Math.random() * 6) + 1;
                resultDiv.innerHTML = `<p>You rolled: <span>${randomNumber}</span></p>`;

                // Send the message to close the modal
                setTimeout(() => {
                    window.parent.postMessage('close-modal', '*'); // Notify the parent to close the modal
                }, 2000);
            }, 2000);
        });
    </script>
</body>
</html>
